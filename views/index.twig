{% extends "layout.twig" %}

{% block content %}
<div class="card">
	<div class="card-header">
		Create new Request
	</div>
	<div class="card-body">
		<form action="/requests" method="POST">
			<div class="form-group row">
				<label for="name" class="col-md-3 col-sm-3 col-form-label">Name</label>
				<div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
					<input type="text" class="form-control" id="name" name="name" placeholder="Example" required>
				</div>
			</div>
			<div class="form-group row">
				<label for="statusCode" class="col-md-3 col-sm-3 col-form-label">Status Code</label>
				<div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
					<input type="number" class="form-control" id="statusCode" name="status_code" placeholder="200">
				</div>
			</div>
			<div class="form-group row">
				<label for="contentType" class="col-md-3 col-sm-3 col-form-label">Content-type</label>
				<div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
					<input type="text" class="form-control" id="contentType" name="content_type"
						placeholder="application/json">
				</div>
			</div>
			<div class="form-group row">
				<label for="timeout" class="col-md-3 col-sm-3 col-form-label">Timeout before response</label>
				<div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
					<div class="input-group mb-3">
						<input type="number" min="0" max="5000" class="form-control" id="timeout" name="timeout"
							placeholder="0">
						<div class="input-group-append">
							<span class="input-group-text">ms</span>
						</div>
					</div>
				</div>
			</div>
			<div class="form-group row">
				<label for="disable_logs" class="col-md-3 col-sm-3 col-form-label">Disable Logs</label>
				<div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
					<input type="checkbox" id="disable_logs" name="disable_logs" value="1">
				</div>
			</div>
			<div class="form-group row">
				<label for="response" class="col-md-3 col-sm-3 col-form-label">
					<strong>Response body</strong>
					<div>
						<a href="https://mozilla.github.io/nunjucks/" target="_blank">
							Nunjunks
						</a>
						syntax support.
						<br>Context included:
						<strong>query, body, headers</strong>.
						<br>
						Example:
						<input class="form-control" value="Hello {{ '{{query.name}}' }}">
					</div>
				</label>
				<div class="col-md-9 col-sm-9">
					<textarea class="form-control" id="response" name="response_body" rows="10"></textarea>

				</div>
			</div>
			<div class="form-group row">
				<label for="response" class="col-md-3 col-sm-3 col-form-label">&nbsp;</label>
				<div class="col-md-9 col-sm-9">
					<button class="btn btn-primary">Create</button>
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock %}